<%= form_with model: quiz, url: quiz_path, method: :patch do |f| %>
  <div class="flex flex-col w-1/2 mx-auto mt-3">
    <%= f.text_field :name, placeholder: "Quiz Name", class: "mt-3 rounded"%>
    <%= f.text_area :description, placeholder: "Quiz Description", class: "mt-3 h-32 rounded"%>
    <%= f.submit class: "bg-purple-light hover:bg-purple text-white font-bold py-2 px-3 rounded mt-3 border border-purple"%>
  </div>
<% end %>