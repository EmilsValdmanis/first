<%= link_to "+ New", quizzes_new_path, class: "bg-purple-light hover:bg-purple text-white border border-purple font-bold py-2 px-3 rounded"%>
<div class="flex flex-col"> 
  <table class="border-collapse border mt-3">
    <thead> 
      <th class="border p-1">Name</th>
      <th class="border p-1">Description</th>
    </thead>
    <tbody>
      <% @quizzes.each do | quiz | %>
        <tr>
          <td class="border w-1/3 text-center p-1"><%= quiz.name %></td>
          <td class="border text-center p-1"><%= quiz.description %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

